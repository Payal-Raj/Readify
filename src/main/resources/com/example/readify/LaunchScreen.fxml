<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #2A4759;"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.readify.LaunchScreenController">

    <children>

        <ImageView fitHeight="77.0" fitWidth="272.0"
                   layoutX="14.0" layoutY="193.0"
                   pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Images/logo.png"/>
            </image>
        </ImageView>


        <Text fill="white"
              style="-fx-font-size: 16px; -fx-font-weight: 600; -fx-letter-spacing: 1px;"
              text="Your Digital Library Assistant"
              layoutX="100" layoutY="260"/>


        <ImageView fitHeight="231.0" fitWidth="371.0"
                   layoutX="415.0" layoutY="193.0"
                   pickOnBounds="true" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0.2, 0, 5);">
            <image>
                <Image url="@Images/cover.png"/>
            </image>
        </ImageView>


        <Button layoutX="80" layoutY="341" onMouseEntered="#onHover" onMouseExited="#onExit" prefHeight="42" prefWidth="95" style="                     -fx-background-color: #FFFFFF;                     -fx-text-fill: #2A4759;                     -fx-font-weight: bold;                     -fx-border-radius: 10px;                     -fx-background-radius: 10px;                     -fx-border-color: transparent;                     -fx-cursor: hand;                 " text="Admin" wrapText="true">
            <font>
                <Font name="Arial Black" size="12.0"/>
            </font>
        </Button>
        <Button
                layoutX="200" layoutY="341"
                prefWidth="95" prefHeight="42"
                text="Student"
                wrapText="true"
                onMouseEntered="#onHover"
                onMouseExited="#onExit"
                style="
                    -fx-background-color: #FFFFFF;
                    -fx-text-fill: #2A4759;
                    -fx-font-weight: bold;
                    -fx-border-radius: 10px;
                    -fx-background-radius: 10px;
                    -fx-border-color: transparent;
                    -fx-cursor: hand;
                ">
            <font>
                <Font name="Arial Black" size="12.0"/>
            </font>
        </Button>

    </children>
</AnchorPane>
