<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="430.0" prefWidth="600" style="-fx-background-color: #F0F2F5; -fx-border-radius: 15; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.readify.StudentProfileController">

    <!-- Title -->
    <Text layoutX="20" layoutY="40" style="-fx-font-size:26px; -fx-font-weight:bold; -fx-fill: #284551;" text="My Profile" />

    <!-- Form Container -->
    <VBox layoutX="15.0" layoutY="80.0" prefHeight="240.0" prefWidth="165.0" spacing="15">

        <!-- Name -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Name:" />

        <!-- Email -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Email:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Label>

        <!-- Phone -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Phone:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Label>
   
           <!-- Member Type -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Member Type:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
   
        <!-- Current Password -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Current Password:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
   
        <!-- New Password -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="New Password:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>

    </VBox>
     <TextField fx:id="nameField" editable="false" layoutX="249.0" layoutY="80.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5 10;" />
     <TextField fx:id="emailField" editable="false" layoutX="250.0" layoutY="122.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5 10;" />
     <TextField fx:id="phoneField" editable="false" layoutX="250.0" layoutY="164.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5 10;" />
     <TextField fx:id="memberTypeField" editable="false" layoutX="250.0" layoutY="206.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5 10;" />
     <PasswordField fx:id="currentPasswordField" layoutX="252.0" layoutY="251.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5 10;" />
     <PasswordField fx:id="newPasswordField" layoutX="250.0" layoutY="288.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5 10;" />

        <!-- Change Password Button -->
     <Button fx:id="changePasswordBtn" layoutX="160.0" layoutY="342.0" onAction="#handleChangePassword" style="-fx-background-color: #284551; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 8 15;" text="Change Password" />
</AnchorPane>
